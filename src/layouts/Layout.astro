---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="Minimalist portfolio and blog" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/assets/styles.css" />
  </head>
  <body class="bg-gray-100 text-gray-900">
    <nav class="fixed w-full bg-white shadow-sm">
      <div class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <h1 class="text-2xl font-bold">Portfolio</h1>
          <div class="space-x-8">
            <a href="/" class="hover:text-gray-600">Home</a>
            <a href="/about" class="hover:text-gray-600">About</a>
            <a href="/articles" class="hover:text-gray-600">Articles</a>
          </div>
        </div>
      </div>
    </nav>

    <main class="container mx-auto px-4 pt-24">
      <slot />
    </main>

    <footer class="mt-16 py-8 bg-white">
      <div class="container mx-auto px-4">
        <p class="text-center text-gray-600">Â© 2025. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
