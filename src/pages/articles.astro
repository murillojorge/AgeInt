---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const articles = await getCollection('articles');
const sortedArticles = articles.sort((a, b) => {
  return new Date(b.data.publishedAt) - new Date(a.data.publishedAt);
});
---

<Layout title="Articles">
  <div class="markdown-body">
    <h1>Articles</h1>
    <p class="mb-8">A collection of my thoughts and experiences.</p>
    
    <ul class="space-y-4">
      {sortedArticles.map(article => (
        <li class="py-2 border-t border-gray-200">
          <a href={`/articles/${article.slug}`} class="hover:text-blue-600">
            <h2 class="text-xl font-semibold">{article.data.title}</h2>
            <p class="text-gray-600 text-sm">{new Date(article.data.publishedAt).toLocaleDateString()}</p>
          </a>
        </li>
      ))}
    </ul>
  </div>
</Layout>
